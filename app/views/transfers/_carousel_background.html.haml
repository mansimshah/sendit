.container-fluid
  #myCarousel.carousel.slide{"data-ride" => "carousel"}
    / Indicators
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
    / Wrapper for slides
    .carousel-inner
      .item.active
        %img{:src => "assets/backgrounds/5.jpg", :style => "width:100%;"}/
      .item
        %img{:src => "assets/backgrounds/6.jpg", :style => "width:100%;"}/
      .item
        %img{:src => "assets/backgrounds/7.jpg", :style => "width:100%;"}/
    / Left and right controls
    -#%a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
    -#  %span.glyphicon.glyphicon-chevron-left
    -#  %span.sr-only Previous
    -#%a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
    -#  %span.glyphicon.glyphicon-chevron-right
    -#  %span.sr-only Next